@model IEnumerable<Education>
<div class="courses-section p-8">
    <h2 class="section-title text-white">آموزش‌های برنامه‌نویسی</h2>

    <div class="courses-grid">

        @foreach (var item in Model)
        {
            <div class="product-card glass-card rounded-3xl glow-effect p-6">
                <div class="course-horizontal-layout">
                    <div class="course-content">
                        <div class="course-badge">@item.Badge</div>
                        <h3 class="text-white">@item.Title</h3>
                        <p>@item.Description</p>
                        <div class="course-footer">
                            <span class="price text-white">@item.Price تومان</span>
                            <a href="#" class="btn-view rounded-3xl">شروع یادگیری</a>
                        </div>
                    </div>
                    <div class="image-wrapper">
                        <img
                            src="~/images/@item.Image"
                            alt="Node Course">
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>