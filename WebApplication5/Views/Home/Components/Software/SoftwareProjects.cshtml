@model IEnumerable<Product>
<div class="text-center mb-16">
    <h2 class="text-4xl font-bold mb-4">محصولات نرم‌افزاری ما</h2>
    <p class="text-gray-400 text-lg">مجموعه‌ای از ابزارهای قدرتمند برای رشد کسب‌وکار شما</p>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
@foreach (var item in Model)
{
    <div class="product-card glass-card rounded-3xl p-8 glow-effect">

        <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-6 
            bg-gradient-to-br @item.GradientClass">
            <i class="@item.IconClass text-2xl"></i>
        </div>


        <h3 class="text-2xl font-bold mb-3">@item.Title</h3>

        <p class="text-gray-400 mb-6 leading-relaxed">
            @item.Description
        </p>

        <div class="flex items-center justify-between">
            <span class="text-indigo-400 font-semibold">@item.Price</span>

            <a asp-controller="Home" asp-action="ProjectDetail" asp-route-id="@item.Id" class="px-4 py-2 rounded-xl bg-white/5 hover:bg-white/10 transition-colors text-sm">
                بیشتر بدانید ←
            </a>
        </div>

    </div>
}
</div>