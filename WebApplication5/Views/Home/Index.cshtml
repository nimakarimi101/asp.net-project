@{
    ViewData["Title"] = "صفحه اصلی";
}
@section SEO
{
    <meta name="title" content="راه‌حل‌های نرم‌افزاری نوآورانه و هوشمند | توسعه نرم‌افزار">
    <meta name="description" content="ارائه راه‌حل‌های نرم‌افزاری نوآورانه با استفاده از جدیدترین تکنولوژی‌ها برای رشد و تحول کسب‌وکار شما. توسعه وب، اپلیکیشن و سیستم‌های هوشمند.">
    <meta name="keywords" content="توسعه نرم‌افزار, طراحی وب, برنامه‌نویسی, هوش مصنوعی, راه‌حل نرم‌افزاری, اپلیکیشن, استارتاپ">
    <meta name="author" content="Your Company Name">
    <meta name="robots" content="index, follow">
}
<!-- Home Page -->
<div id="page-home" class="page active">
<!-- Hero Section -->
<section class="relative py-20 px-6">
    <div class="max-w-7xl mx-auto text-center">
        <div class="animate-fade-in" style="animation-delay: 0.1s;">
            <span class="inline-block px-4 py-2 rounded-full glass-card text-sm text-indigo-300 mb-6">
                🚀 پیشرو در توسعه نرم‌افزار
            </span>
        </div>
        <h1 id="hero-title" class="animate-fade-in text-5xl md:text-7xl font-extrabold mb-6 leading-tight" style="animation-delay: 0.2s;">
            <span class="bg-gradient-to-r from-white via-indigo-200 to-purple-200 bg-clip-text text-transparent">
                راه‌حل‌های نرم‌افزاری
            </span>
            <br>
            <span class="bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
                نوآورانه و هوشمند
            </span>
        </h1>
        <p id="hero-subtitle" class="animate-fade-in text-xl text-gray-400 max-w-2xl mx-auto mb-10" style="animation-delay: 0.3s;">
            با استفاده از جدیدترین تکنولوژی‌ها، محصولاتی می‌سازیم که کسب‌وکار شما را متحول می‌کند
        </p>
        <p>@*@ViewData["educations"]*@
            @ViewBag.Educations
        </p>
        <div class="animate-fade-in flex flex-wrap justify-center gap-4" style="animation-delay: 0.4s;">
            <a asp-controller="Home" asp-action="ProdactPage"  class="btn-primary px-8 py-4 rounded-2xl font-semibold text-lg">
                مشاهده محصولات
            </a>
            <button onclick="location.href='@Url.Action("RequestDemo" , "Home")'" class="glass-card px-8 py-4 rounded-2xl font-semibold text-lg hover:bg-white/10 transition-colors">
                درخواست دمو
            </button>
        </div>
    </div>
</section>
<!-- Stats Section -->
<section class="py-20 px-6">
    <div class="max-w-7xl mx-auto">
        <div class="glass-card rounded-3xl p-12 glow-effect">
            <div class="grid md:grid-cols-4 gap-8 text-center">
                <div>
                    <div class="text-5xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">+۵۰۰</div>
                    <div class="text-gray-400">مشتری فعال</div>
                </div>
                <div>
                    <div class="text-5xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">+۱۲۰</div>
                    <div class="text-gray-400">پروژه موفق</div>
                </div>
                <div>
                    <div class="text-5xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">۹۸٪</div>
                    <div class="text-gray-400">رضایت مشتری</div>
                </div>
                <div>
                    <div class="text-5xl font-bold bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent mb-2">۲۴/۷</div>
                    <div class="text-gray-400">پشتیبانی</div>
                </div>
            </div>
        </div>
    </div>
</section>
</div>